@code {
    private DeleteAccountRequest deleteRequest = new DeleteAccountRequest();

    private bool showSuccessMessage = false;

    private bool isSubmitting = false;

    private string errorMessage = string.Empty;



    private async Task HandleSubmit()

    {

        isSubmitting = true;

        errorMessage = string.Empty; // Clear previous errors



        try

        {

            // Prepare the request body matching the API format

            var requestBody = new

            {

                firstName = deleteRequest.Firstname,

                lastName = deleteRequest.Lastname,

                email = deleteRequest.Email,

                password = deleteRequest.Password

            };



            // Set headers

            Http.DefaultRequestHeaders.Clear();

            Http.DefaultRequestHeaders.Add("accept", "*/*");

            Http.DefaultRequestHeaders.Add("Accept-Language", "en-US");



            // API call to DeleteAccount endpoint



            var response = await Http.PostAsJsonAsync("https://planfuryinvoicing.azurewebsites.net/api/Auth/DeleteAccount", requestBody);







            if (response.IsSuccessStatusCode)

            {

                showSuccessMessage = true;

            }

            else

            {

                // Read the error response

                var errorContent = await response.Content.ReadAsStringAsync();



                // Check if response contains "User not found" message

                if (errorContent.Contains("User not found") || response.StatusCode == System.Net.HttpStatusCode.NotFound)

                {

                    errorMessage = "Invalid credentials. Please check your email and password.";

                }

                else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)

                {

                    errorMessage = "Invalid credentials. Please check your email and password.";

                }

                else

                {



                    errorMessage = "Invalid credentials. Please check your email and password.";



                }



                Console.WriteLine($"Error: {response.StatusCode}");

                Console.WriteLine($"Error details: {errorContent}");

            }

        }

        catch (Exception ex)

        {

            errorMessage = "An error occurred. Please check your connection and try again.";

            Console.WriteLine($"Exception: {ex.Message}");

        }

        finally

        {

            isSubmitting = false;

        }

    }



    public class DeleteAccountRequest

    {

        public string Firstname { get; set; } = string.Empty;

        public string Lastname { get; set; } = string.Empty;

        public string Email { get; set; } = string.Empty;

        public string Password { get; set; } = string.Empty;

    }
}
