<script>
    // Carousel functionality
    let currentSlide = 0;
    const slideItems = document.querySelectorAll('.carousel-slide');
    const dots = document.querySelectorAll('.carousel-dot');
    const totalSlides = slideItems.length;
    let autoplayInterval;
    let isAutoplayRunning = true;

    function initCarousel() {
        showSlide(0);
        startAutoplay();
    }

    function showSlide(index) {
        slideItems.forEach((item, i) => {
            item.classList.remove('active', 'exit-right');
            if (i === currentSlide && i !== index) {
                item.classList.add('exit-right');
            }
        });
        dots.forEach(dot => dot.classList.remove('active'));

        currentSlide = index;

        slideItems[currentSlide].classList.add('active');
        dots[currentSlide].classList.add('active');
    }

    function goToSlide(index) {
        if (index !== currentSlide) {
            showSlide(index);
            resetAutoplay();
        }
    }

    function changeSlide(direction) {
        let newSlide = currentSlide + direction;

        if (newSlide >= totalSlides) {
            newSlide = 0;
        } else if (newSlide < 0) {
            newSlide = totalSlides - 1;
        }

        showSlide(newSlide);
        resetAutoplay();
    }

    function startAutoplay() {
        autoplayInterval = setInterval(() => {
            changeSlide(1);
        }, 4000);
    }

    function stopAutoplay() {
        clearInterval(autoplayInterval);
    }

    function resetAutoplay() {
        if (isAutoplayRunning) {
            stopAutoplay();
            startAutoplay();
        }
    }

    function toggleAutoplay() {
        const playPauseBtn = document.getElementById('playPauseBtn');

        if (isAutoplayRunning) {
            stopAutoplay();
            isAutoplayRunning = false;
            playPauseBtn.textContent = '▶';
        } else {
            startAutoplay();
            isAutoplayRunning = true;
            playPauseBtn.textContent = '⏸';
        }
    }

    document.querySelector('.carousel-hero').addEventListener('mouseenter', () => {
        if (isAutoplayRunning) stopAutoplay();
    });

    document.querySelector('.carousel-hero').addEventListener('mouseleave', () => {
        if (isAutoplayRunning) startAutoplay();
    });

    let touchStartX = 0;
    let touchEndX = 0;

    document.querySelector('.carousel-hero').addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
    });

    document.querySelector('.carousel-hero').addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
    });

    function handleSwipe() {
        const swipeThreshold = 50;
        const diff = touchStartX - touchEndX;

        if (Math.abs(diff) > swipeThreshold) {
            if (diff > 0) {
                changeSlide(1);
            } else {
                changeSlide(-1);
            }
        }
    }

    document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
            changeSlide(-1);
        } else if (e.key === 'ArrowRight') {
            changeSlide(1);
        } else if (e.key === ' ') {
            e.preventDefault();
            toggleAutoplay();
        }
    });

    // Fixed Mobile menu toggle function
    function toggleMobileMenu() {
        console.log('Mobile menu toggle clicked'); // Debug line
        const mobileMenu = document.getElementById('mobileMenu');
        
        if (!mobileMenu) {
            console.error('Mobile menu element not found');
            return;
