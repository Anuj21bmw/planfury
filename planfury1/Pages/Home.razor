        const privacyLink = e.target.closest('li')?.querySelector('[onclick*="togglePrivacyMenu"]');

        if (submenu && !e.target.closest('.privacy-submenu') && e.target !== privacyLink) {
            submenu.classList.remove('active');
        }
    });

    // Initialize carousel when DOM is loaded
    document.addEventListener('DOMContentLoaded', function () {
        console.log('DOM loaded, initializing carousel');
        initCarousel();

        // Ensure mobile icon links work properly
        const mobileIconLinks = document.querySelectorAll('.mobile-icon-link');
        mobileIconLinks.forEach(link => {
